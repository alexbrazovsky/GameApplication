<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp"
        android:id="@+id/textViewName"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:textSize="28sp"
        android:textAlignment="center" />

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/videoView" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:id="@+id/imageViewPhoto"
        android:visibility="gone"
        android:layout_below="@+id/textViewName"
        android:layout_alignLeft="@+id/textViewName"
        android:layout_alignStart="@+id/textViewName" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewPhoto"
        android:layout_alignLeft="@+id/imageViewPhoto"
        android:layout_alignStart="@+id/imageViewPhoto"
        android:id="@+id/scrollViewOfTextTask">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewText"
                android:fontFamily="sans-serif-medium"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_below="@+id/imageViewPhoto"
                android:layout_alignRight="@+id/textViewName"
                android:layout_alignEnd="@+id/textViewName" />

            <Button
                android:text="Принимаю задание"
                android:id="@+id/buttonStartTask"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/scrollView2"
                android:layout_alignStart="@+id/scrollView2" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>